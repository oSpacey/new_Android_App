<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mso_defined_sports_title"/>

    <ImageView
        android:id="@+id/mso_sports_text"
        android:layout_width="647dp"
        android:layout_height="840dp"
        android:src="@drawable/mso_defined_ultimate_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:layout_width="1800dp"
        android:layout_height="1500sp"
        android:layout_toRightOf="@+id/mso_sports_text"
        android:layout_marginTop="-100dp"
        android:scaleType="fitXY"
        android:src="@drawable/mso_defined_ultimate_image" />
</RelativeLayout>