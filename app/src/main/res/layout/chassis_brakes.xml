<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chassis_brake_win"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="false"
    android:layout_alignParentTop="true"
    android:background="@color/PopUpBg">

    <android.support.v7.widget.CardView
        android:id="@+id/view"
        android:layout_width="1820dp"
        android:layout_height="820dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="48dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chassis_title" />

        <ImageView
            android:id="@+id/furtherInfo"
            android:layout_width="647dp"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:src="@drawable/chassis_text" />

        <ImageView
            android:id="@+id/closeChassis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1750dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/close"
            android:translationZ="3dp"

            />

        <Button
            android:layout_width="1178dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="644dp"
            android:background="@color/black"
            android:translationZ="1dp" />

        <Button
            android:layout_width="1178dp"
            android:layout_height="85dp"
            android:layout_alignTop="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="644dp"
            android:layout_marginTop="735dp"
            android:background="@color/black"
            android:translationZ="1dp" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="1178dp"
            android:layout_height="800dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="644dp"
            android:layout_marginTop="75dp"
            android:focusable="true"
            android:foregroundGravity="center" />

    </android.support.v7.widget.CardView>


</RelativeLayout>