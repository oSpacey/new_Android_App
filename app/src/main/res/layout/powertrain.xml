<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/powertrain_win"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="false"
    android:layout_alignParentTop="true"
    android:background="@color/PopUpBg">


    <android.support.v7.widget.CardView
        android:layout_width="1820dp"
        android:layout_height="820dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="48dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/powertrain_title" />

        <ImageView
            android:id="@+id/powertrain_img"
            android:layout_width="1200dp"
            android:layout_height="1000sp"
            android:layout_marginLeft="640dp"
            android:layout_marginTop="-150dp"
            android:src="@drawable/powertrain_image" />

        <ImageView
            android:id="@+id/closePower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1750dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/close"

            />

        <ImageView
            android:id="@+id/engine_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1170dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/exclusivity_oval"
            android:elevation="10dp"
            android:src="@mipmap/add_btn"

            />

        <ImageView
            android:id="@+id/transmission_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1575dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/exclusivity_oval"
            android:elevation="10dp"
            android:src="@mipmap/add_btn" />

        <ImageView
            android:id="@+id/exhaust_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1060dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/exclusivity_oval"
            android:elevation="10dp"
            android:src="@mipmap/add_btn" />

        <ImageView
            android:id="@+id/lubrication_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1500dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/exclusivity_oval"
            android:elevation="10dp"
            android:src="@mipmap/add_btn" />

        <ScrollView
            android:id="@+id/power_scroll"
            android:layout_width="650dp"
            android:layout_height="800dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="69dp"
            android:scrollX="0dp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/furtherInfo"
                    android:layout_width="647dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/powertrain_further_info" />

                <ImageView
                    android:id="@+id/engine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/furtherInfo"
                    android:src="@drawable/powertrain_engine" />

                <ImageView
                    android:id="@+id/transmission"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/engine"
                    android:src="@drawable/powertrain_transmission" />

                <ImageView
                    android:id="@+id/exhaust"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/transmission"
                    android:src="@drawable/powertrain_exhaust" />

                <ImageView
                    android:id="@+id/lubricant"
                    android:layout_width="match_parent"
                    android:layout_height="900dp"
                    android:layout_below="@+id/exhaust"
                    android:src="@drawable/powertrain_lubricant" />

            </RelativeLayout>


        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>