<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/exclusivity_f1_title"
        android:id="@+id/imageView3"
        android:layout_marginTop="-35dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/mso_defined"
        android:layout_width="380dp"
        android:layout_height="335dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="4dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/exclusivity_mso_defined_card" />

            <ImageView
                android:id="@+id/mso_defined_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="280dp"
                android:background="@drawable/main_ovals"
                android:elevation="5dp"
                android:src="@mipmap/add_btn"
                />

            </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="380dp"
        android:layout_height="335dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="4dp"
        android:layout_marginLeft="770dp"
        android:layout_marginTop="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/exclusivity_mso_bespoke_card" />

            <ImageView
                android:id="@+id/mso_bespoke_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="280dp"
                android:background="@drawable/main_ovals"
                android:elevation="5dp"
                android:src="@mipmap/add_btn"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="380dp"
        android:layout_height="335dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="4dp"
        android:layout_marginLeft="1210dp"
        android:layout_marginTop="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/exclusivity_mso_heritage_card" />

            <ImageView
                android:id="@+id/mso_heritage_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="280dp"
                android:background="@drawable/main_ovals"
                android:elevation="5dp"
                android:src="@mipmap/add_btn"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="380dp"
        android:layout_height="335dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="4dp"
        android:layout_marginLeft="545dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/mso_defined">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/exclusivity_mso_programmes_card" />

            <ImageView
                android:id="@+id/mso_programmes_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="280dp"
                android:background="@drawable/main_ovals"
                android:elevation="5dp"
                android:src="@mipmap/add_btn"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="380dp"
        android:layout_height="335dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="4dp"
        android:layout_marginLeft="995dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/mso_defined">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/exclusivity_mso_limited_card" />

            <ImageView
                android:id="@+id/mso_limited_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="280dp"
                android:background="@drawable/main_ovals"
                android:elevation="5dp"
                android:src="@mipmap/add_btn"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>